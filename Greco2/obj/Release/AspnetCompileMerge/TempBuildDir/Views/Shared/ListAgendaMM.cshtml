@using Greco2.Models.Evento
@model IEnumerable<AgendaSP>

<style>
    td {
        /*background-image: linear-gradient(white 40%,#f2f2f2);*/
        font-size: 10px;
        background-color: white;
        border-bottom-color:#f7f7f7;
    }

    th {
        font-size: 11px;
    }
    
    table {
        max-width: 180%;
        margin-right: -95px;
        border: 1px solid #f5f5f5;
        border-radius: 4px;
        /*overflow: auto;*/
        font-size: 12px;  
    }

    table tr:hover {
    background-color:yellow;
    }

    footer {
        background-color: #f2f2f2;
        height: 30px;
        padding-top:5px;
    }
</style>

@if (Model.Count() > 0)
{
<div style="height:300px;overflow:auto;">
    <table class="table table-bordered table-responsive" id="listaAgenda">

        <thead>

            <tr class="text-primary" style="background-color:#f2f2f2;">
                <th></th>
                <th style="text-align:center;">Fecha</th>
                <th>DenunciaId</th>
                <th class="seleccionable"></th>
                <th style="text-align:center;">Tipo</th>
                <th>Organismo</th>
                <th>Denunciante</th>
                <th>TramiteCRM</th>
                <th>Solucionado</th>
                <th>Contestado</th>
                <th>Req.Informe</th>
                <th>Responsable</th>
                <th>Estudio</th>

            </tr>
        </thead>
        <tbody style="text-align:left;">


            @foreach (var item in @Model)
            {
                <tr style="height:50px;overflow:auto;">

                    <td>
                        @Html.DisplayFor(modelItem => item.EventoId)
                    </td>
                    <td style="max-width:400px;" nowrap>
                        @Convert.ToString(string.Format("{0:dd/MM/yyyy HH:mm}", item.Fecha))

                    </td>
                    <td class="text-primary" style="width:80px;text-align:center;">
                        @Html.DisplayFor(i => item.DenunciaId)
                        @*@Html.ActionLink(@item.DenunciaId.ToString(), "GetDenunciaById", "Denuncias", new { id = @item.DenunciaId }, null)*@
                    </td>
                    <td class="seleccionable"><input type="checkbox" style="width:35px;margin-left:10px;" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombretipoEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organismo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Denunciante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TramiteCRM)
                    </td>
                    <td style="text-align:center;">
                        @Html.DisplayFor(modelItem => item.Solucionado)
                    </td>
                    @{
                        var esContestado = (@item.Contestado == 1) ? "SI" : "NO";
                        <td style="text-align:center;">
                            @esContestado
                        </td>
                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.RequerimientoInforme)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.Responsable)
                    </td>

                    <td nowrap>
                        @Html.DisplayFor(modelItem => item.Estudio)
                    </td>

                </tr>

            }

        </tbody>
    </table>
</div>
    <footer class="text-center text-primary">Total : @Model.Count()</footer>
}
else
{

    <div>
        <h5 class="text-primary text-center">No se encontraron coincidencias</h5>
    </div>
    
}

