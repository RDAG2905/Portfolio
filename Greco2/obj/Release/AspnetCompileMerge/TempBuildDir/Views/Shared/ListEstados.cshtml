@using Greco2.Models.Estado
@model IEnumerable<EstadoDto>

<style>

    /*table {
        margin-left: 80px;
        margin-right: 80px;
    }*/
    th {
        text-align: center;
    }

    .check {
        width: 20px;
    }

    span {
        text-align: center;
    }

    .infoResult {
        border-radius: 4px;
    }

    .list-group-item {
        border-radius: 4px;
    }
</style>

@if (Model.Any())
{
    <table class="table table-hover list-group-item">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>Etapa</th>
                <th class="col-xs-1">Editar</th>
                @*<th class="col-xs-1">Eliminar</th>*@
                <th class="col-xs-1" >Inactivo</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td class="check">
                    @Html.DisplayFor(i => item.Id)
                </td>
                <td style="width:100px;">
                    @Html.DisplayFor(i => item.TipoEstado)
                </td>

                <td class="check">
                    <a onclick="editar(@item.Id,'EditarEstado','ListarEstados')" data-toggle='modal' data-target='#editModalEstados'><i class="glyphicon glyphicon-pencil col-xs-1"></i></a>
                </td>
                @*<td class="check">
                    <a onclick="cargarIdModalDelete(@item.Id.ToString())" data-toggle='modal' data-target='#deleteModalEstados'><i class="glyphicon glyphicon-trash col-xs-1"></i></a>
                </td>*@
                <td class="col-xs-1">
                    @Html.DisplayFor(i => @item.Activo)
                </td>
            </tr>
        }

    </table>

}
else
{

    <div id="infoResult" class="alert-info text-center col-xs-12">
        <h4>Sin resultados</h4>
    </div>

}





