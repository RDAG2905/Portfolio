@using Greco2.Models.Mediador
@model IEnumerable<MediadorDto>

<style>

    /*table {
        margin-left: 80px;
        margin-right: 80px;
    }*/
    th {
        text-align: center;
    }

    th, td {
        font-size: 12px;
    }

    .check {
        width: 20px;
    }

    span {
        text-align: center;
    }

    .infoResult {
        border-radius: 4px;
    }

    .list-group-item {
        border-radius: 4px;
    }
</style>

@if (Model.Any())
{
    <div style="display:flex;max-height:300px;overflow:auto">
        <table class="table table-hover ">
            <thead>
                <tr style="background-color:#f5f5f5;">
                    <th></th>
                    <th style="text-align:left;">Nombre</th>
                    <th class="col-xs-1">Editar</th>
                    <th class="col-xs-1">Eliminar</th>
                    <th style="text-align:right;" class="col-xs-1">Activo</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tr>
                    <td class="check">
                        @Html.DisplayFor(i => item.Id)
                    </td>
                    <td style="width:100px;">
                        @Html.DisplayFor(i => item.Nombre)
                    </td>

                    <td class="check">
                        <a onclick="editarMediador(@item.Id)" data-toggle='modal' data-target='#editModalMediadores'><i class="glyphicon glyphicon-pencil col-xs-1"></i></a>
                    </td>
                    <td class="check">
                        <a onclick="cargarIdModalDelete(@item.Id.ToString(),this)" data-toggle='modal' data-target='#deleteModalMediadores'><i class="glyphicon glyphicon-trash text-danger col-xs-1"></i></a>
                    </td>
                    <td class="col-xs-1">
                        @Html.DisplayFor(i => @item.Activo)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="text-success col-xs-12">@ViewBag.Success</div>
    <br />
    <div class="text-primary">Total:  @Model.Count()</div>
}
else
{

    <div id="infoResult" class="alert alert-info text-center col-xs-12">
        <h4>No se encontraron coincidencias</h4>
    </div>

}





