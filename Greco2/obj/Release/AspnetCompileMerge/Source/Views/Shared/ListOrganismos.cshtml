@using Greco2.Models.Organismo
@model IEnumerable<OrganismoDto>

<style>

    /*table {
        margin-left: 80px;
        margin-right: 80px;
    }*/
    th {
        text-align: center;
    }

    .check {
        width: 20px;
    }

    table {
    padding-left:10px;
    padding-right:50px;
    }
</style>

@if (Model.Any())
{

    <table class="table table-hover list-group-item">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>Provincia</th>
                <th>Localidad</th>
                <th>Region</th>
                <th class="col-xs-1">Editar</th>
                <th class="col-xs-1">Eliminar</th>
                <th @*class="col-xs-1"*@>Activo</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
        <tr>
            <td class="check">
                @Html.DisplayFor(i => item.Id)
            </td>
            <td style="width:150px;">
                @Html.DisplayFor(i => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(i => item.Provincia_Id)
            </td>
            <td>
                @Html.DisplayFor(i => item.Localidad_Id)
            </td>
            <td>
                @Html.DisplayFor(i => item.Region_Id)
            </td>

            <td class="check">@*onclick="editar(@item.Id,'EditarOrganismo','ListarOrganismos')"*@
                <a onclick="editarOrganismo(@item.Id)" data-toggle='modal' data-target='#editModalOrganismo'><i class="glyphicon glyphicon-pencil col-xs-1"></i></a>
            </td>
            <td class="check">
                <a onclick="cargarModalDeleteEstudio(@item.Id.ToString())" data-toggle='modal' data-target='#deleteModalMotivosDeReclamo'><i class="glyphicon glyphicon-trash col-xs-1" style="display:none;"></i></a>
            </td>
            <td @*class="col-xs-1"*@>
                @Html.DisplayFor(i => @item.Activo)
            </td>
        </tr>
        }

    </table>


}
else
{

    <div id="infoResult" class="alert-info text-center col-xs-12">
        <h4>Sin resultados</h4>
    </div>

}


