                <input type="text" class="form-control" id="inputHonorarios" value="@Model.HonorariosCoprec" disabled />
            </div>
        </div>

        <div class="row">
            <div class="col-xs-5 col-md-offset-2">
                <label>Fecha Gestión Honorarios</label>
            </div>
            <div class="col-xs-6 col-md-4">
                @{
                    var fechaGestionHonorarios = (Model.FechaGestionHonorarios != null) ? @Model.FechaGestionHonorarios.Value.ToString("yyyy-MM-dd") : "";
                    <input type="date" class="form-control" id="inputFechaGestionHonorarios" @*style="margin-left: -80px;"*@ value="@fechaGestionHonorarios" disabled />
