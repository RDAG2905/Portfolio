            <div class="col-xs-5 col-md-offset-2">
                <label>Arancel</label>
            </div>
            <div class="col-xs-5 col-md-4">
                <input type="text" class="form-control" id="inputArancel" value="@Model.Arancel" @*step="any"*@ disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-md-offset-2">

                <label>Fecha Gestión Arancel</label>
            </div>
            <div class="col-xs-5 col-md-4">
