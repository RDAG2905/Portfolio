                    <input type="text" class="form-control" id="inputHonorarios" value="@Model.HonorariosCoprec" disabled  @*onkeydown="verificarContenidoMonetario(this)"*@ onmouseout="verificarContenidoMonetario(this)" onmouseover="removeErrorClass(this)" autocomplete="off" />
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5 col-md-offset-2">
                    <label>Fecha Gestión Honorarios</label>
                </div>
                <div class="col-xs-6 col-md-4">
                    @{
                        var fechaGestionHonorarios = (Model.FechaGestionHonorarios != null) ? @Model.FechaGestionHonorarios.Value.ToString("yyyy-MM-dd") : "";
                        <input type="date" class="form-control" id="inputFechaGestionHonorarios" value="@fechaGestionHonorarios" disabled />
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 col-md-offset-2">
                    <label>Monto Acordado</label>
                </div>
                <div class="col-xs-6 col-md-4">
                    <input type="text" class="form-control" id="inputMontoAcordado" value="@Model.MontoAcordado" onmouseout="verificarContenidoMonetario(this)" onmouseover="removeErrorClass(this)" autocomplete="off" disabled  />
                </div>
            </div>



            <div class="row">
                <div class="col-xs-5 col-md-offset-2">
                    <label>Arancel</label>
                </div>
                <div class="col-xs-5 col-md-4">
                    <input type="text" class="form-control" id="inputArancel" value="@Model.Arancel" onmouseout="verificarContenidoMonetario(this)" onmouseover="removeErrorClass(this)" @*step="any"*@ autocomplete="off" disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-5 col-md-offset-2">

                    <label>Fecha Gestión Arancel</label>
                </div>
                <div class="col-xs-5 col-md-4">
                    @{
                        var fechaGestionArancel = (Model.FechaGestionArancel != null) ? @Model.FechaGestionArancel.Value.ToString("yyyy-MM-dd") : "";
                        <input type="date" class="form-control" id="inputFechaGestionArancel"  value="@fechaGestionArancel" disabled />
                    }


                </div>
            </div>
            <br />
            <div class="row" id="CampoMonetarioInválido" style="display:none;font-size:14px;margin-left:-2px;margin-right:2px;">
                <div class="col-xs-12 alert alert-danger text-center">
                    Verifique los datos ingresados
                    <br />
                    Los campos Honorarios, Monto Acordado y Arancel solo permiten Números y de ser necesario una coma para incluir decimales.
                </div>

            </div>
            <div class="row"  id="mensajeResultado" style="display:none;font-size:14px;margin-left:-2px;margin-right:2px;">
                <div class="col-xs-12 alert alert-success alert-dismissible text-center" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true" style="color:green">&times;</span></button>

                    <strong>Datos actualizados correctamente</strong>
                </div>
            </div>
            <div class="row">
                @*<div class="loader-container" id="loadingSaveCoprec" style="display:none;margin-left:100px;">
                    <div class="loader"></div>
                </div>*@
                <div  id="loadingSaveCoprec" style="display:none;margin-left:100px;color:#337ab7;">Actualizando...</div>
                @*<img src="@Url.Content("~/Images/4.gif")" id="loadingSaveCoprec" style="display:none;margin-left:100px;color:#337ab7;" />*@
                <input type="button" class="btn btn-primary btn-sm btnGuardar" value="Guardar" id="btnGuardarDatosCoprec" disabled onclick="guardarDatosCoprec()" style="margin-left:600px;" />
            </div>


        </form>
    </div>
   

}



