                        </div>

                        <div class="row">
                            <span class="col-xs-2"></span>
                            <label class="col-xs-1">Estudio:</label>
                            @Html.DropDownListFor(m => m.estudioSeleccionado, Model.Estudios, "", new { @class = "col-xs-1 form-control", @id = "comboEstudiosNuevaRel" })


