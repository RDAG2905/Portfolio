 function elTipoEventoEsValido() {
        var mensaje = "Ingrese algún Filtro de Búsqueda";
        if ($('#filtro').val().trim().length == 0) {
            toastr.warning(mensaje);
            return false;
        } else {
            $('#guardarNuevo').attr('data-dismiss', 'modal');
            return true;
        }
    }

    $("#filtro").keypress(function (e) {
        if (e.which == 13) {
