    function editarResponsable(Id) {
        limpiarCamposEdicionRE();
        GetEstudiosEdición();
       
        $.ajax({
            url: '@Url.Action("EditarResponsable","Admin")',
            type: "GET",
            data: {
                id: Id
            },
            success: function (response) {
                try {
                    $('#idElementEdit').val(response.Id);
                    $('#nombreRE').val(response.Nombre);
                    $('#apellidoRE').val(response.Apellido);
                    $('#usuarioRE').val(response.UmeId);
                    var tipoResponsable = response.TipoResponsable;
                    var rol = response.Rol;
                    var estudioId = response.Estudio_Id;

                    $("#tipoResponsableRE option").each(function (i, valor) {
                        //console.log(i + ' : ' + $(valor).val());
                        if ($(valor).val() == tipoResponsable) {
                            $(valor).prop('selected', true);
                            //console.log('son iguales');                            
                        } 
                    });

                    $("#rolRE option").each(function (i, valor) {
                        console.log(i + ' : ' + $(valor).val());
                        if ($(valor).val() == rol) {
                            $(valor).prop('selected', true);
                            console.log('son iguales');
                        }
                    });
                    
                    $('#campoActivacion').prop('checked', response.Deleted);
                   
                    $("#estudioRE option").each(function (i, valor) {
                        //console.log(i + ' : ' + $(valor).val())
                        if ($(valor).val() == estudioId) {
                            $(valor).prop('selected', true);
                            //console.log('son iguales');                          
                        }
                        if (response.responseText == "Ha finalizado la Sesión") {
                            toastr.error("Ha finalizado la Sesión");
                            //finDeSesion.css("display", "block")
                        }
                    });

                    if ($("#rolRE option:selected").text() == "ESTUDIO") {
                        $("#estudioRE").prop("disabled",false);
                    } else {
                        $('#estudioRE')[0].selectedIndex = 0;
                        $("#estudioRE").prop("disabled",true);
                    }
                } catch (response) {
                    //if (response == undefined)
                    toastr.error(response.responseText);
                }
            },
            error: function (response) {
                if (response.status == 0) {
                    toastr.error("Ha culminado la Sesión");
                } else {
                    toastr.error(response.responseText + ' ' + response.status);
                }
                
            }
        });
    }

