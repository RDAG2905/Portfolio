    function cleanModalNuevoResponsable() {
        $('#nombreRN').val("");
        $('#apellidoRN').val("");
        $('#usuarioRN').val(""); 
        $('#tipoResponsableRN')[0].selectedIndex = 0;
        $('#rolRN')[0].selectedIndex = 0;
        $('#estudioRN')[0].selectedIndex = 0;
        $('#divExisteResponsable').empty();
    } 

    function guardarNuevoResponsable() {
        if (esValido()) {
             var token = '@Html.AntiForgeryToken()';
            var gnrestoken = $(token).val();
            $('#btnCerrarModalNuevoResponsable').click();
            $.ajax({
                url: '@Url.Action("CrearResponsable", "Admin")',
                type: "POST",
                data: {
                    Nombre: $('#nombreRN').val(),
                    Apellido: $('#apellidoRN').val(),
                    Usuario: $('#usuarioRN').val(),
                    TipoResponsable: $('#tipoResponsableRN').find("option:selected").val(),
                    Rol: $('#rolRN').find("option:selected").val(),
                    Estudio_Id: $('#estudioRN').find("option:selected").val(),
                    __RequestVerificationToken: gnrestoken
                },
                success: function (response) {
                    //toastr.success("Registro guardado correctamente");
                    $('#elementos').html(response);
                    $('#btnGuardarNuevoResponsable').removeAttr('data-dismiss');
                    //cleanModalNuevoResponsable();
                },
                error: function (response) {
                    toastr.error(response.responseText + ' ' + response.status);
                }
            });
        }

    }

    function esValidoResponsable() {
        var mensaje = "Todos los campos son obligatorios";
        if (($('#nombreRN').val().trim().length == 0) ||
            ($('#apellidoRN').val().trim().length == 0) ||
            ($('#usuarioRN').val().trim().length == 0) ||
            $('#tipoResponsableRN')[0].selectedIndex == 0 ||
            $('#tipoResponsableRN option:selected').val() == null ||
            $('#rolRN')[0].selectedIndex == 0 ||
            $('#rolRN option:selected').val() == null ||
            ($('#rolRN option:selected').val() == 'ESTUDIO'
                && $('#estudioRN')[0].selectedIndex == 0))
        
        {
            toastr.warning(mensaje);
            return false;
        } else {
            return true;
        }
     }

    function existeResponsable() {
        $('#guardarNuevo').prop("disabled", true);
        var token = '@Html.AntiForgeryToken()';
        var ctoken = $(token).val();
        if (esValidoResponsable()) {
             $.ajax({
                 url: '@Url.Action("ExisteResponsable","Admin")',
                 type: "POST",
                 data: {
                     usuario: $('#usuarioRN').val(),
                     __RequestVerificationToken: ctoken
                 },
                 success: function (response) {
                     $("#divExisteResponsable").html(response);
                     $('#guardarNuevo').prop("disabled",false);

                 },
                 error: function (response) {
                     toastr.error(response.responseText + ' ' + response.status);
                     $('#guardarNuevo').prop("disabled", false);
                 }
             });
        }
        $('#guardarNuevo').prop("disabled", false);
    };

