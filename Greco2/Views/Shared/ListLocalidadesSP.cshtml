@using Greco2.Models.Localidad
@model IEnumerable<LocalidadSP>

<style>

    td{
        font-size: 11px;
    }
    th {
        font-size: 12px;
    }

    th {
        text-align: center;
        background-color: #f9f9f9;
    }

    .check {
        width: 20px;
    }

    .infoResult {
        border-radius: 4px;
    }

    .list-group-item {
        border-radius: 4px;
    }
</style>

@if (Model.Any())
{
    <div style="display:flex;max-height:300px;overflow:auto">
        <table class="table table-hover ">
            <thead>
                <tr>
                    <th></th>
                    <th style="text-align:left;">Localidad</th>
                    <th style="text-align:left;">Provincia</th>
                    <th class="col-xs-1">Editar</th>
                    <th class="col-xs-1">Eliminar</th>
                    <th class="col-xs-1" style="text-align:right;">Inactivo</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="check" style="text-align:right">
                        @Html.DisplayFor(i => @item.Id)
                    </td>
                    <td style="width:100px;">
                        @Html.DisplayFor(i => @item.Nombre)
                    </td>
                    <td style="width:100px;">
                        @Html.DisplayFor(i => @item.PROVINCIA)
                    </td>

                    <td class="check">
                        <a onclick="editarLocalidad(@item.Id)" data-toggle='modal' data-target='#editModalLocalidades'><i class="glyphicon glyphicon-pencil col-xs-1"></i></a>
                    </td>
                    <td class="check">
                        <a onclick="cargarIdModalDelete(@item.Id.ToString(),this)" data-toggle='modal' data-target='#deleteModalLocalidades'><i class="glyphicon glyphicon-trash text-danger col-xs-1"></i></a>
                    </td>
                    <td class="col-xs-1">
                        @Html.DisplayFor(i => @item.Deleted)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="text-success col-xs-12">@ViewBag.Success</div>
    <br />
    <div class="text-primary">Total:  @Model.Count()</div>

}
else
{
    <br />
    <div id="infoResult" class="alert alert-info text-center col-xs-12">
        <h4>No se encontraron coincidencias</h4>
    </div>

}
