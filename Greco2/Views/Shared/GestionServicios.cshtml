    function BuscarServicio() {        
        $('#elementos').empty();
        mostrarLoading();
            $.ajax({
                url: '@Url.Action("BuscarServicio", "Admin")',
                type: "GET",
                data: {
                    filtro: $('#filtro').val()
                },
                success: function (response) {
                    ocultarLoading();
                    $('#elementos').html(response);
                },
